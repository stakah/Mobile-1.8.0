        },
        "on-before-delete": {
          "removable": true,
          "type": "event",
          "global": true
        },
        "on-after-create": {
          "removable": true,
          "type": "event",
          "global": true
        },
        "on-after-update": {
          "removable": true,
          "type": "event",
          "global": true
        },
        "on-after-delete": {
          "removable": true,
          "type": "event",
          "global": true
        },
        "on-error": {
          "removable": true,
          "type": "event",
          "global": true
        }
      }
